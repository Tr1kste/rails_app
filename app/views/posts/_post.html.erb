<tr>
  <td><%= link_to post.user.email, user_path(post.user) %></td>
  <td><%= post.description %></td>
  <td><%= link_to "Post № #{post.id}", post_path(post) %></td>
  <% if policy(post).edit? %>
    <td><%= link_to "Edit", edit_post_path(post)%></td>
  <% end %>
  <% if policy(post).destroy? %>
    <td><%= link_to "Delete", post_path(post), data: { method: :delete, confirm: 'Вы уверены, что хотите удалить пост?' } %></td>
  <% end %>
</tr>